<Window x:Class="EquipmentKP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:EquipmentKP"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:entities="clr-namespace:Equipment.Database.Entities;assembly=Equipment.Database"
        
        xmlns:vm="clr-namespace:EquipmentKP.ViewModels" xmlns:c="clr-namespace:EquipmentKP.Infrastructure.Converters"
        d:DataContext="{d:DesignInstance {x:Type vm:MainViewModel}, IsDesignTimeCreatable=True}"
        DataContext="{Binding MainVM, Source={StaticResource Locator}}"
        
        Title="{Binding Title}" Height="450" Width="800">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadDataCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Command="{Binding CloseAplicationCommand}"/>
            </MenuItem>
            <MenuItem Header="Комплекты оборудования">
                <MenuItem Header="Добавить"/>
                <MenuItem Header="Редактировать"/>
            </MenuItem>

            <MenuItem Header="Оборудование">
                <MenuItem Header="Добавить"/>
                <MenuItem Header="Редактировать" Command="{Binding EditEquipmentCommand}" CommandParameter="{Binding SelectedEquipment}"/>
            </MenuItem>
        </Menu>

        <!--<TextBlock Text="{Binding EquipmentsKits.Count, StringFormat='кол-во комплектов:{0}'}" DockPanel.Dock="Bottom"/>-->

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="33*"/>
                <ColumnDefinition Width="40*"/>
            </Grid.ColumnDefinitions>
            <GridSplitter Grid.Column="1" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="328,0,0,0"/>

            <DockPanel Grid.ColumnSpan="2">
                <DockPanel DockPanel.Dock="Top" Margin="3">
                    <TextBlock Text="Фильтр по инвентарнику:  "/>
                    <TextBox Text="{Binding InventoryNoFilter, UpdateSourceTrigger=PropertyChanged}"/>
                </DockPanel>
                <UniformGrid DockPanel.Dock="Top" Rows="1">
                    <Button Content="Сгруппировать" Command="{Binding GroupingCammand}"/>
                    <Button Content="Разгруппировать" Command="{Binding UnGroupingCammand}"/>
                </UniformGrid>
                <DataGrid ItemsSource="{Binding EquipmentsView}" SelectedItem="{Binding SelectedEquipment}">
                    <DataGrid.Resources>
                        <c:EquipmentGroupItemsToLocationName x:Key="GroupItemsConveter"/>
                    </DataGrid.Resources>
                    <DataGrid.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.ContainerStyle>
                                <Style TargetType="{x:Type GroupItem}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type GroupItem}">

                                                <Expander IsExpanded="True" 
                                                          BorderThickness="0,0,0,1" 
                                                          BorderBrush="#ff002255"
                                                          Background="WhiteSmoke"
                                                          Style="{DynamicResource MyExpanderStyle}">
                                                    <Expander.Header>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="Инв. №: "/>
                                                            <TextBlock Text="{Binding Name}"/>

                                                            <TextBlock Text="Кол-во: "/>
                                                            <TextBlock Text="{Binding ItemCount}"/>

                                                            <TextBlock Text="Место установки:"/>
                                                            <TextBlock Text="{Binding Items, Converter={StaticResource GroupItemsConveter}}" />
                                                        </StackPanel>
                                                    </Expander.Header>
                                                    <Expander.Content>
                                                        <ItemsPresenter Margin="5 0 0 0" />
                                                    </Expander.Content>
                                                </Expander>

                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </GroupStyle.ContainerStyle>
                        </GroupStyle>
                    </DataGrid.GroupStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Серийный №" Binding="{Binding SerialNo}" />
                        <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Тип оборудования" Binding="{Binding EquipmentType.Name}"/>
                    </DataGrid.Columns>
                </DataGrid>

            </DockPanel>

            <DockPanel Grid.Column="2">
                <GroupBox Header="Основная информация"  DockPanel.Dock="Top">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Инвентарный №:"
                                   Grid.Column="0" Grid.Row="0"/>
                        <TextBox IsEnabled="False" 
                                 Grid.Column="1" Grid.Row="0" 
                                 Text="{Binding SelectedEquipment.EquipmentsKit.InventoryNo}"/>

                        <TextBlock Text="Владелец:"
                                   Grid.Column="0" Grid.Row="1"/>
                        <TextBox IsEnabled="False" 
                                 Grid.Column="1" Grid.Row="1" 
                                 Text="{Binding SelectedEquipment.EquipmentsKit.Owner}"/>

                        <TextBlock Text="Категрия обрудования:"  
                                   Grid.Column="0" Grid.Row="2"/>
                        <TextBox IsEnabled="False"          
                                 Grid.Column="1" Grid.Row="2" 
                                 Text="{Binding SelectedEquipment.EquipmentType.EquipmentCategory.Name}"/>

                        <TextBlock Text="Тип оборудования"  
                                   Grid.Column="0" Grid.Row="3"/>
                        <TextBox IsEnabled="False"          
                                 Grid.Column="1" Grid.Row="3" 
                                 Text="{Binding SelectedEquipment.EquipmentType.Name}"/>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Дополнительная информация:" DockPanel.Dock="Top">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="IP адрес:"  
                                   Grid.Column="0" Grid.Row="0"/>
                        <TextBox IsEnabled="False"          
                                 Grid.Column="1" Grid.Row="0" 
                                 Text="{Binding SelectedEquipment.IpAddress}"/>

                        <TextBlock Text="Сетевое имя:"  
                                   Grid.Column="0" Grid.Row="1"/>
                        <TextBox IsEnabled="False"          
                                 Grid.Column="1" Grid.Row="1" 
                                 Text="{Binding SelectedEquipment.NetworkName}"/>

                        <TextBlock Text="Операционная система:"  
                                   Grid.Column="0" Grid.Row="2"/>
                        <TextBox IsEnabled="False"          
                                 Grid.Column="1" Grid.Row="2" 
                                 Text="{Binding SelectedEquipment.OperationSystem}"/>
                    </Grid>

                </GroupBox>
                <Expander DockPanel.Dock="Bottom" Header="Заявки по ремонту и обслуживанию" IsExpanded="True">
                    <DockPanel>
                        <DataGrid ItemsSource="{Binding SelectedEquipment.Requests}" SelectedItem="{Binding SelectedRequest}" DockPanel.Dock="Top">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Номер Заявки" Binding="{Binding Number}"/>
                                <DataGridTextColumn Header="Дата регистрации заявки"/>
                                <DataGridCheckBoxColumn Header="Исп."/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <ListView />
                    </DockPanel>
                   
                </Expander>
            </DockPanel>


        </Grid>
    </DockPanel>
</Window>
