<Window x:Class="EquipmentKP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:EquipmentKP"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:entities="clr-namespace:Equipment.Database.Entities;assembly=Equipment.Database"
        
        xmlns:vm="clr-namespace:EquipmentKP.ViewModels"
        
        d:DataContext="{d:DesignInstance {x:Type vm:MainWindowViewModel}, IsDesignTimeCreatable=True}"
        DataContext="{Binding MainWindowVM, Source={StaticResource Locator}}"
        
        Title="{Binding Title}" Height="450" Width="800">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadDataCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Command="{Binding CloseAplicationCommand}"/>
            </MenuItem>
        </Menu>
        
        <!--<TextBlock Text="{Binding EquipmentsKits.Count, StringFormat='кол-во комплектов:{0}'}" DockPanel.Dock="Bottom"/>-->
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <GridSplitter Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Stretch"/>

            <DockPanel>
                <DockPanel DockPanel.Dock="Top" Margin="3">
                    <TextBlock Text="Фильтр по инвентарнику:  "/>
                    <TextBox/>
                </DockPanel>
                <UniformGrid DockPanel.Dock="Top" Rows="1">
                    <Button Content="Сгруппировать" Command="{Binding GroupingCammand}"/>
                    <Button Content="Разгруппировать" Command="{Binding UnGroupingCammand}"/>
                </UniformGrid>
                <DataGrid ItemsSource="{Binding EquipmentsView}" AutoGenerateColumns="True">
                    <DataGrid.GroupStyle>
                        <GroupStyle>

                            <GroupStyle.ContainerStyle>
                                <Style TargetType="{x:Type GroupItem}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type GroupItem}">

                                                <Expander IsExpanded="True" 
                                                          BorderThickness="0,0,0,1" 
                                                          BorderBrush="#ff002255"
                                                          Background="Tan"
                                                          Style="{DynamicResource MyExpanderStyle}">
                                                    <Expander.Header>
                                                        <Label Content="{Binding}"/>
                                                    </Expander.Header>
                                                    <Expander.Content>
                                                        <ItemsPresenter />
                                                    </Expander.Content>
                                                </Expander>
                                                
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </GroupStyle.ContainerStyle>
                        </GroupStyle>
                    </DataGrid.GroupStyle>
                    


                    <!--<DataGrid.Resources>
                    <CollectionViewSource x:Key="EquipmentsView" Source="{Binding EquipmentsKits}"/>
                </DataGrid.Resources>-->

                    <!--<DataGrid.Columns>
                    <DataGridTextColumn Header="VNCode" Binding="{Binding Location.CodeName}"/>
                    <DataGridTextColumn Header="Инв. номер" Binding="{Binding InventoryNum}"/>
                    <DataGridTextColumn Header="Дата получения:" Binding="{Binding ReceiptDate, StringFormat='dd:MM:yyyy'}" Width="*"/>
                </DataGrid.Columns>-->
                </DataGrid>
            </DockPanel>
            

        </Grid>
    </DockPanel>
</Window>
