<Window x:Class="EquipmentKP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:EquipmentKP"
        DataContext="{Binding MainVindovVM, Source={StaticResource Locator}}"
        Title="{Binding Title}" Height="450" Width="800">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Command="{Binding CloseAplicationCommand}"/>
            </MenuItem>
            <MenuItem Header="Тест асинхронной команды" Command="{Binding TestAsyncCommand}"/>
        </Menu>
        <TextBlock Text="{Binding Time}"/>
    </DockPanel>
</Window>
